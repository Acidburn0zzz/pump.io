<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title><%- title %> - <%- site %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Le styles -->
    <link href="/stylesheet/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheet/bootstrap-responsive.min.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <style>
      body {
      position: relative;
      padding-top: 40px;
      }
    </style>
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <% if (remoteUser) { %>
          <%= partial('nav-loggedin') %>
          <% } else if (nologin) { %>
          <%= partial('nav-nologin') %>
          <% } else { %>
          <%= partial('nav-anonymous') %>
          <% } %>
        </div> <!-- /container -->
      </div> <!-- /navbar-inner -->
    </div> <!-- /navbar -->

    <div class="container">

      <div id="content">
        <%= body %>
      </div>

      <hr>

      <footer>
        <p><a href="http://pump.io/">pump.io</a> software available under the Apache License 2.0.</p>
      </footer>

    </div> <!-- /container -->

    <div id="modal-note" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="post-label" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 id="post-label">Post a note</h3>
      </div>
      <div class="modal-body">
        <form id="post-note">
          <fieldset>
            <textarea id="note-content" class="span5" name="note" rows="6"></textarea>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn primary" id="send-note">Send</button>
      </div>
    </div>

    <!-- Le javascript
         ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/javascript/jquery-1.8.2.min.js"></script>
    <script src="/javascript/json2.min.js"></script>
    <script src="/javascript/bootstrap.min.js"></script>
    <script src="/javascript/underscore-min.js"></script>
    <script src="/javascript/backbone-min.js"></script>
    <script src="/javascript/oauth.min.js"></script>
    <script src="/javascript/sha1.min.js"></script>
    <script src="/javascript/spin.min.js"></script>
    <script src="/javascript/jquery-spin.js"></script>
    <script src="/javascript/pump.js"></script>
    <script>
      config = {
      site: "<%- site %>"
      };
    </script>
  </body>

</html>
