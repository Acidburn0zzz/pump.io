<div class="row activity major headless" id="<%- data.activity.id %>">
  <div class="row">
    <div class="span8 offset1">
      <% if (data.activity.object.displayName) { %>
      <h2><%- data.activity.object.displayName %></h2>
      <% } else { %>
      <%= data.activity.object.content %>
      <% } %>
      <p><small><a href="<%- data.activity.url %>"><abbr title="<%- data.activity.published %>" class="easydate"><%- data.activity.published %></abbr></a><% if (data.activity.location) { %> in <a href="<%- data.activity.location.url %>"><%- data.activity.location.displayName %></a><% } %>
        <% if (data.activity.to && data.activity.to.length > 0) { %>
        To: <%= partial("activity-object-list", {objects: data.activity.to}) %>
        <% } %>
        <% if (data.activity.cc && data.activity.cc.length > 0) { %>
        CC: <%= partial("activity-object-list", {objects: data.activity.cc}) %>
        <% } %>
      </small></p>
    </div>
  </div>
  <div class="row">
    <div class="span8 offset1">
      <% if (data.activity.object.image && data.activity.object.image.url) { %>
      <img src="<%- data.activity.object.image.url %>"></img>
      <% } %>
      <% if (data.activity.object.displayName) { %>
      <p><%= data.activity.object.content %></p>
      <% } %>
      <% if (data.user) {
        data.object = data.activity.object; %>
        <%= partial("responses") %>
      <% delete data.object;
        } %>
    </div>
  </div>
  <div class="row">
    <div class="span8 offset1 replies">
      <% if (data.activity.object.replies.totalItems > 0) { %>
      <h3>Replies</h3>
      <% if (data.activity.object.replies.totalItems > data.activity.object.replies.items.length) { %>
      <a class="show-all" href="#">Show all <%= data.activity.object.replies.totalItems %> replies</a>
      <% } %>
      <% _.each(data.activity.object.replies.items, function(reply) { 
         data.reply = reply; %>
      <%= partial("reply") %>
      <% delete data.reply;
         }); %>
      <% } %>
    </div>
  </div>
</div>
